  <footer>Â© 2025 Texnologiyalar va Iqtisodiy tizimlar klubi</footer>  <script>
    const files = [];

    function uploadFile() {
      const fileInput = document.getElementById('fileInput');
      if (!fileInput.files.length) {
        alert('Iltimos, fayl tanlang.');
        return;
      }
      const file = fileInput.files[0];
      files.push(file);
      displayFiles(files);
      fileInput.value = '';
    }

    function displayFiles(fileArray) {
      const container = document.getElementById('filesContainer');
      container.innerHTML = '';
      fileArray.forEach(f => {
        const div = document.createElement('div');
        div.className = 'file-item';
        div.innerHTML = `<strong>${f.name}</strong> <button onclick="alert('Bosmaxonaga buyurtma berildi!')">Buyurtma berish</button>`;
        container.appendChild(div);
      });
    }

    function searchFiles() {
      const query = document.getElementById('searchInput').value.toLowerCase();
      const filtered = files.filter(f => f.name.toLowerCase().includes(query));
      displayFiles(filtered);
    }

    function loginAdmin() {
      const pass = prompt('Admin parolini kiriting:');
      if (pass === 'AMIRXON111') {
        document.getElementById('adminPanel').style.display = 'block';
      } else {
        alert('Notoâ€˜gâ€˜ri parol!');
      }
    }
  </script></body>
